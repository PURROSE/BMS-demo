<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="web.entity.Borrows" table="bms_borrow">
        <id name="id" column="id">
            <generator class="identity"></generator>
        </id>
        <property name="client_id" column="client_id"></property>
        <property name="client_name" column="client_name"></property>
        <property name="book_id" column="book_id"></property>
        <property name="book_name" column="book_name"></property>
        <property name="user_id" column="user_id"></property>
        <property name="user_name" column="user_name"></property>
        <property name="num" column="num"></property>
        <property name="borrow_time" column="borrow_time"></property>
        <property name="borrow_aftertime" column="borrow_aftertime"></property>

    </class>
</hibernate-mapping>