<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="web.entity.Books" table="bms_books">
        <id name="id" column="id">
            <generator class="identity"></generator>
        </id>
        <property name="name" column="name"></property>
        <property name="writer" column="writer"></property>
        <property name="num" column="num"></property>
        <property name="user_id" column="user_id"></property>
        <property name="user_name" column="user_name"></property>
        <property name="addtime" column="addtime"></property>
    </class>
</hibernate-mapping>